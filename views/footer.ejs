                <div class="row">
                  <div class="col-4">
                    <a href="https://he-il.facebook.com" title="facebook">
                      <i class="fa fa-facebook-official logo" aria-hidden="true"></i>
                    </a>
                  </div>
                  <!-- end of facebook button -->
                  <!-- instagram button-->
                  <div class="col-4">
                    <a href="https://www.instagram.com/" title="instagram">
                      <i class="fa fa-instagram logo" aria-hidden="true"></i>
                    </a>
                  </div>
                  <!-- end instagram button -->
                  <!-- the github button -->
                  <div class="col-4">
                    <a href="https://github.com/AmitBarash/project" title="github">
                      <i class="fa fa-github logo" aria-hidden="true"></i>
