        <link href="/fa/font-awesome.css" rel="stylesheet" type="text/css">
        <link rel="stylesheet" href="/assets/allStyle.css">
        <style>
            .logo
            {
              font-size: 7vh;
            }
            #bakery-logo
            {
              height: 18vh;
              width: 15vw;
